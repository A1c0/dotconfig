# App shortcuts 
hyper - a : open -a 'Alacritty'
hyper - m : open -a 'Spotify'
hyper - l : open -a 'Logseq'
hyper - b : open -a 'Arc'

# Keyboard brightness
cmd - brightness_up : nu $HOME/.config/skhd/mac_brightness_plus.nu
cmd - brightness_down : nu $HOME/.config/skhd/mac_brightness_minus.nu

# Opacity
cmd - sound_up : nu $HOME/.config/skhd/opacity_plus.nu
cmd - sound_down : nu $HOME/.config/skhd/opacity_minus.nu

alt - return : yabai -m window --toggle zoom-fullscreen

# Focus Change
ctrl + alt - left : yabai -m window --focus west
ctrl + alt - right : yabai -m window --focus east
ctrl + alt - up : yabai -m window --focus north
ctrl + alt - down : yabai -m window --focus south

# Opacity
hyper - t : yabai -m window --opacity 1.00
