# App shortcuts 
hyper - a : open -a 'Alacritty'
hyper - m : open -a 'Spotify'
hyper - l : open -a 'Logseq'
hyper - b : open -a 'Arc'

# Keyboard brightness
cmd - brightness_up : nu $HOME/.config/skhd/mac_brightness_plus.nu
cmd - brightness_down : nu $HOME/.config/skhd/mac_brightness_minus.nu

alt - return : yabai -m window --toggle zoom-fullscreen

# Focus Change
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - k : yabai -m window --focus north
alt - j : yabai -m window --focus south
